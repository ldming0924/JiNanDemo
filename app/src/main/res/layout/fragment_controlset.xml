<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.kawakp.demingliu.jinandemo.utils.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/image_beng" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />

            <include
                android:id="@+id/beng_status"
                layout="@layout/beng_status" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.kawakp.demingliu.jinandemo.widget.CustomExpandableListView
                    android:id="@+id/customExpandableListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.kawakp.demingliu.jinandemo.widget.CustomEmptyView
                    android:id="@+id/empty_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>


        </LinearLayout>

    </com.kawakp.demingliu.jinandemo.utils.MyScrollView>


</LinearLayout>